{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		"group:jsTest"
	],
	"labels": [
		"renovate"
	],
	"reviewers": [
		"join"
	],
	"enabledManagers": [
		"npm"
	],
	"baseBranches": [
		"develop"
	],
	"rebaseWhen": "behind-base-branch",
	"prHourlyLimit": 5,
	"prConcurrentLimit": 5,
	"configMigration": true,
	"packageRules": [
		{
			"matchUpdateTypes": [
				"major"
			],
			"enabled": false
		},
		{
			"groupName": "MUI",
			"matchPackageNames": [
				"@emotion{/,}**",
				"@mui{/,}**"
			]
		},
		{
			"groupName": "React ",
			"matchPackageNames": [
				"react{/,}**",
				"react-dom{/,}**",
				"@types/react{/,}**",
				"@types/react-dom{/,}**"
			]
		},
		{
			"groupName": "React Query",
			"matchPackageNames": [
				"@tanstack{/,}**"
			]
		},
		{
			"groupName": "Vite & Vitest",
			"matchPackageNames": [
				"vite{/,}**",
				"vitest{/,}**",
				"@vitejs{/,}**"
			]
		},
		{
			"groupName": "NestJS & Prisma",
			"matchPackageNames": [
				"@nestjs{/,}**",
				"@prisma{/,}**",
				"prisma"
			]
		},
		{
			"groupName": "Linters and Formatters",
			"matchPackageNames": [
				"@biomejs{/,}**",
				"eslint{/,}**"
			]
		},
		{
			"groupName": "Testing",
			"matchPackageNames": [
				"@testing-library{/,}**",
				"jest{/,}**",
				"@playwright{/,}**",
				"playwright"
			]
		},
		{
			"groupName": "Types",
			"matchPackageNames": [
				"@types{/,}**"
			]
		}
	]
}
